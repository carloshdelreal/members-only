<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/head'%>
    <%= render 'layouts/shim' %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <%= render 'layouts/header', :username => username %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>

    <%= yield %>
    <%= render 'layouts/footer'%>
  </body>
</html>
